{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "make",
            "detail": "Run make",
            "type": "shell",
            "command": "${input:makeTarget} ",
            "options": {
                "env": {}
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build"
            }
        }
    ],
    "inputs": [
        {
            "type": "pickString",
            "id": "makeTarget",
            "description": "Select a build target",
            "options": [
                "make all",
                "make flash",
                "make flash_arduino",
                "make flash_arduinoISP",
                "make disassemble",
                "make squeaky_clean",
                "make clean",
                "make debug",
            ],
            "default": "make all"
        }
    ]
}